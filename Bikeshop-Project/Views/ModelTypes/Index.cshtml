@model IEnumerable<Bikeshop_Project.Models.ModelType>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // if a user is logged in, update logging information for monitoring team metrics
    if (Logger.returnUserLogInStatus())
    {
        Logger.numberofPageViews++;         // Add number of page views for general user session
        Logger.LogPageClick("Model Types");    // send log to monitoring team to show a new page click has occured.    
    }
}

<h1>Model Types</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DESCRIPTION)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.COMPONENTID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DESCRIPTION)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.COMPONENTID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MODELTYPE">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MODELTYPE">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MODELTYPE">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
