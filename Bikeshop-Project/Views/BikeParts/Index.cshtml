@model IEnumerable<Bikeshop_Project.Models.BikeParts>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    // if a user is logged in, update logging information for monitoring team metrics
    if (Logger.returnUserLogInStatus())
    {
        Logger.numberofPageViews++;         // Add number of page views for general user session
        Logger.LogPageClick("Bike Parts");    // send log to monitoring team to show a new page click has occured.    
    }
}

<h1>Bike Parts</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SERIALNUMBER)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.COMPONENTID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SUBSTITUTEID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LOCATION)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QUANTITY)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DATEINSTALLED)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EMPLOYEEID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SERIALNUMBER)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.COMPONENTID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SUBSTITUTEID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LOCATION)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QUANTITY)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DATEINSTALLED)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EMPLOYEEID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
