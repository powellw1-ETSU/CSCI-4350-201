@model IEnumerable<Bikeshop_Project.Models.Order>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Orders</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.bike_quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.bike_price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.component_quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.component_price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.bike_quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.bike_price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.component_quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.component_price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OrderID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OrderID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OrderID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
