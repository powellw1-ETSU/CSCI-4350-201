@model IEnumerable<Bikeshop_Project.Models.BikeTubes>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    // if a user is logged in, update logging information for monitoring team metrics
    if (Logger.returnUserLogInStatus())
    {
        Logger.numberofPageViews++;         // Add number of page views for general user session
        Logger.LogPageClick("Bike Tubes");    // send log to monitoring team to show a new page click has occured.    
    }
}

<h1>Bike Tubes</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SERIALNUMBER)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TUBENAME)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TUBEID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LENGTH)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SERIALNUMBER)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TUBENAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TUBEID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LENGTH)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
